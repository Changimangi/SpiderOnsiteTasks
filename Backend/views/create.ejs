    <title>Document</title>
    <link rel="stylesheet" href="create.css">
</head>
<body>
    <div id="overall">
    <form action="/create" id="creation" method="POST">
        <button id="submitting" type="submit" name="submitbutton">Submit</button><br>
        <input type="text" name="tablename" placeholder="Enter table name"><br>
        <input type="text" name="field" placeholder="Enter field name">
        <input type="text" name="datatype" placeholder="Datatype"><br>
        
    </form>
    <button id="addfield">+</button>
</div>

    <script>
        document.getElementById("addfield").addEventListener("click",function(){
            let inp1 = document.createElement("input");
            inp1.setAttribute("type","text");
            inp1.setAttribute("name","field");
            inp1.setAttribute("placeholder","Enter field name");
            let inp2 = document.createElement("input");
            inp2.setAttribute("type","text");
            inp2.setAttribute("name","datatype");
            inp2.setAttribute("placeholder","Datatype");
            let doc = document.getElementById("creation");
            doc.appendChild(inp1);
            doc.appendChild(inp2);
            doc.appendChild(document.createElement("br"))
        })
    </script>

</body>
</html>